<macrodef name = "git-push">
		<attribute name = "path" />
		<attribute name = "branch" />
		<attribute name = "head" />
		<sequential>
			<git command = "push" dir="@{path}">
				<args>
					<arg value = "@{branch}" />
					<arg value = "@{head}" />
				</args>
			</git>
		</sequential>
	</macrodef>
    <target name="git-tag">
        <git command = "tag">
            <args>

		<arg value="-a"/>
		<arg value="v1.5"/>
		<arg value="-m"/>
		<arg value="v1.5"/>
		
            </args>
        </git> 
    </target>

<target name="push" depends="git-tag">
        <git command = "push">
            <args>

		<arg value="origin"/>
		<arg value="v1.5"/>
		
		
            </args>
        </git> 
    </target>


